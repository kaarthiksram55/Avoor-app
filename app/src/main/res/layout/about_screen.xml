<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/AboutScreenImgViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/app_logo_round"
            android:contentDescription="@string/AboutScreenLogoImgViewDescription" />

        <TextView
            android:id="@+id/AboutScreenTxtViewAppInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"
            android:layout_below="@+id/AboutScreenImgViewLogo" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>