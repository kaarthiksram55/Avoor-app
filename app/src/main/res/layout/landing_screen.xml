<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LandingScreenDrawLyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="25sp">

        <TextView
            android:id="@+id/LandingScreenTxtViewTitleMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/LandingScreenTitleEnglish"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"/>

        <ImageView
            android:id="@+id/LandingScreenImgViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LandingScreenTxtViewTitleMessage"
            android:layout_marginTop="25sp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/app_logo_round"
            android:contentDescription="@string/LandingScreenLogoImgViewDescription"/>

        <EditText
            android:id="@+id/LandingScreenEditTxtUsername"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_below="@+id/LandingScreenImgViewLogo"
            android:layout_marginTop="50sp"
            android:layout_marginHorizontal="20sp"
            android:layout_centerHorizontal="true"
            android:hint="@string/LandingScreenUsernameHintText"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/LandingScreenEditTxtPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_below="@+id/LandingScreenEditTxtUsername"
            android:layout_centerHorizontal="true"
            android:layout_margin="20sp"
            android:hint="@string/LandingScreenPasswordHintText"
            android:importantForAutofill="no" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LandingScreenEditTxtPassword"
            android:layout_centerHorizontal="true"
            android:layout_margin="20sp"
            android:text="@string/LandingScreenLoginButtonText"
            android:onClick="openHomeScreen"
            tools:ignore="UsingOnClickInXml" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>