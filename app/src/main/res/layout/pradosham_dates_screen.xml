<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/PradoshamDatesScreenToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/PradoshamDatesScreenImgViewLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:contentDescription="@string/PradoshamDatesScreenLogoImgViewDescription"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/PradoshamDatesScreenTxtViewAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_toRightOf="@+id/PradoshamDatesScreenImgViewLogo"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/PradoshamDatesScreenTxtViewTitleMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="35sp"
            android:layout_below="@+id/PradoshamDatesScreenToolbar" />

        <TableLayout
            android:id="@+id/PradoshamDatesScreenPradoshamInfoTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/PradoshamDatesScreenTxtViewTitleMessage" >

            <TableRow
                tools:ignore="UselessParent" >

                <TextView
                    android:text="@string/PradoshamDatesScreenTableHeaderSNo"
                    android:paddingHorizontal="10sp"/>

                <TextView
                    android:text="@string/PradoshamDatesScreenTableHeaderId"
                    android:paddingHorizontal="10sp"/>

                <TextView
                    android:text="@string/PradoshamDatesScreenTableHeaderTamilDate"
                    android:paddingHorizontal="10sp" />

                <TextView
                    android:text="@string/PradoshamDatesScreenTableHeaderEnglishDate"
                    android:paddingHorizontal="10sp" />

                <TextView
                    android:text="@string/PradoshamDatesScreenTableHeaderDay"
                    android:paddingHorizontal="10sp"/>

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>